<!-- Views/CommitHistoryView.axaml -->
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:TurboGit.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TurboGit.Views.CommitHistoryView"
             x:DataType="vm:CommitHistoryViewModel">

  <Grid>
    <!-- Indicatore di caricamento -->
    <ProgressBar IsIndeterminate="True"
                 IsVisible="{Binding IsLoading}"
                 VerticalAlignment="Top"/>

    <!-- 
      ListBox con VirtualizingStackPanel.
      Questo è il componente chiave per garantire che solo gli elementi visibili
      vengano renderizzati, permettendo di gestire migliaia di commit senza lag.
    -->
    <ListBox ItemsSource="{Binding Commits}"
             IsVisible="{Binding !IsLoading}">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <Grid ColumnDefinitions="100,20,*,150,150">
            
            <!-- TODO: Canvas per il rendering del grafo -->
            <!-- Questo canvas disegnerà i nodi e le linee calcolate nel ViewModel -->
            <Canvas Grid.Column="0" Background="Transparent" />

            <!-- Dati del Commit -->
            <TextBlock Grid.Column="2" Text="{Binding ShortMessage}" FontWeight="Bold" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="3" Text="{Binding Author}" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="4" Text="{Binding Sha}" VerticalAlignment="Center"/>
            
          </Grid>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
    
  </Grid>
</UserControl>
