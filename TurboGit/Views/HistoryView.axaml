<!-- TurboGit/Views/HistoryView.axaml -->
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:TurboGit.ViewModels"
             xmlns:controls="using:TurboGit.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="TurboGit.Views.HistoryView">
    <Design.DataContext>
        <vm:HistoryViewModel/>
    </Design.DataContext>

    <!--
      Replace the standard ListBox with our custom high-performance,
      virtualized control for rendering the commit graph.
    -->
    <controls:VirtualizedCommitGraphControl Items="{Binding Commits}" />

</UserControl>