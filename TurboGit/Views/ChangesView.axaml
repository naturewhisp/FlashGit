<!-- TurboGit/Views/ChangesView.axaml -->
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:TurboGit.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="TurboGit.Views.ChangesView">
    <Design.DataContext>
        <vm:StagingViewModel/>
    </Design.DataContext>

    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,*,Auto,*" Margin="10">
        <!-- Unstaged Files -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Unstaged Files" FontWeight="Bold"/>
        <ListBox Grid.Row="1" Grid.Column="0" ItemsSource="{Binding UnstagedFiles}" SelectedItem="{Binding SelectedFile}" Margin="0,5">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock Grid.Column="0" Text="{Binding FilePath}"/>
                        <Button Grid.Column="1" Content="Stage"
                                Command="{Binding $parent[ListBox].DataContext.StageFileCommand}"
                                CommandParameter="{Binding}"
                                Padding="8,2" FontSize="10"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Staged Files -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Staged Files" FontWeight="Bold" Margin="0,10,0,0"/>
        <ListBox Grid.Row="3" Grid.Column="0" ItemsSource="{Binding StagedFiles}" SelectedItem="{Binding SelectedFile}" Margin="0,5">
             <ListBox.ItemTemplate>
                <DataTemplate>
                     <Grid ColumnDefinitions="*,Auto">
                        <TextBlock Grid.Column="0" Text="{Binding FilePath}"/>
                        <Button Grid.Column="1" Content="Unstage"
                                Command="{Binding $parent[ListBox].DataContext.UnstageFileCommand}"
                                CommandParameter="{Binding}"
                                Padding="8,2" FontSize="10"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Diff Viewer -->
        <Border Grid.Column="1" Grid.RowSpan="4" BorderBrush="Gray" BorderThickness="1" Margin="10,0,0,0">
            <ScrollViewer>
                <TextBlock Text="{Binding DiffContent}" Margin="5" FontFamily="monospace"/>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>