<!-- TurboGit/Views/ChangesView.axaml -->
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:TurboGit.ViewModels"
             xmlns:models="using:TurboGit.Core.Models"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="700"
             x:Class="TurboGit.Views.ChangesView">
    <Design.DataContext>
        <vm:StagingViewModel/>
    </Design.DataContext>

    <UserControl.Resources>
        <vm:DiffLineColorConverter x:Key="DiffLineColorConverter"/>
    </UserControl.Resources>

    <Grid ColumnDefinitions="280,*" RowDefinitions="*" Margin="10">

        <!-- Left panel: file lists -->
        <Grid Grid.Column="0" RowDefinitions="Auto,*,Auto,*" Margin="0,0,10,0">

            <!-- Unstaged Files -->
            <TextBlock Grid.Row="0" Text="Unstaged Files" FontWeight="Bold" Margin="0,0,0,4"/>
            <ListBox Grid.Row="1" x:Name="UnstagedList"
                     ItemsSource="{Binding UnstagedFiles}"
                     SelectedItem="{Binding SelectedUnstagedFile}"
                     Margin="0,0,0,4">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Grid.Column="0" Text="{Binding FilePath}" VerticalAlignment="Center"/>
                            <Button Grid.Column="1" Content="Stage"
                                    Command="{Binding $parent[ListBox].DataContext.StageFileCommand}"
                                    CommandParameter="{Binding}"
                                    Padding="8,2" FontSize="10"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Staged Files -->
            <TextBlock Grid.Row="2" Text="Staged Files" FontWeight="Bold" Margin="0,8,0,4"/>
            <ListBox Grid.Row="3" x:Name="StagedList"
                     ItemsSource="{Binding StagedFiles}"
                     SelectedItem="{Binding SelectedStagedFile}"
                     Margin="0,0,0,0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Grid.Column="0" Text="{Binding FilePath}" VerticalAlignment="Center"/>
                            <Button Grid.Column="1" Content="Unstage"
                                    Command="{Binding $parent[ListBox].DataContext.UnstageFileCommand}"
                                    CommandParameter="{Binding}"
                                    Padding="8,2" FontSize="10"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <!-- Right panel: diff viewer -->
        <Grid Grid.Column="1" RowDefinitions="*,Auto">

            <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" CornerRadius="4">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="DiffItemsControl" ItemsSource="{Binding DiffHunks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#444444" BorderThickness="0,0,0,1" Margin="0,0,0,8">
                                    <StackPanel>
                                        <!-- Hunk Header -->
                                        <Grid ColumnDefinitions="*,Auto" Background="#222222" x:Name="HunkHeaderGrid">
                                            <TextBlock Text="{Binding Header}" 
                                                       Foreground="#AAAAAA" 
                                                       FontFamily="Consolas,monospace" 
                                                       FontSize="11" 
                                                       Padding="4,2"/>
                                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                 <Button Content="Stage Hunk" 
                                                         Command="{Binding $parent[UserControl].DataContext.StageHunkCommand}"
                                                         CommandParameter="{Binding}"
                                                         IsVisible="{Binding $parent[UserControl].DataContext.IsSelectedFileUnstaged}"
                                                         FontSize="10" Padding="4,1" Margin="4,0"/>
                                                 <Button Content="Unstage Hunk" 
                                                         Command="{Binding $parent[UserControl].DataContext.UnstageHunkCommand}"
                                                         CommandParameter="{Binding}"
                                                         IsVisible="{Binding $parent[UserControl].DataContext.IsSelectedFileStaged}"
                                                         FontSize="10" Padding="4,1" Margin="4,0"/>
                                            </StackPanel>
                                        </Grid>
                                        
                                        <!-- Lines in this hunk -->
                                        <ListBox ItemsSource="{Binding Lines}"
                                                 SelectionMode="Multiple"
                                                 Background="Transparent"
                                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                            <ListBox.Styles>
                                                <Style Selector="ListBoxItem">
                                                    <Setter Property="Padding" Value="0"/>
                                                </Style>
                                                <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                                                    <Setter Property="Background" Value="#44AAAAFF"/>
                                                </Style>
                                            </ListBox.Styles>
                                            <ListBox.ItemTemplate>
                                                <DataTemplate x:DataType="models:DiffLine">
                                                    <Grid ColumnDefinitions="40,*"
                                                          Background="{Binding Type, Converter={StaticResource DiffLineColorConverter}}">
                                                        <TextBlock Grid.Column="0"
                                                                   Text="{Binding NewLineNumber}"
                                                                   Foreground="#888888"
                                                                   FontFamily="Consolas,monospace"
                                                                   FontSize="12"
                                                                   Padding="4,0"
                                                                   VerticalAlignment="Center"/>
                                                        <TextBlock Grid.Column="1"
                                                                   Text="{Binding Content}"
                                                                   FontFamily="Consolas,monospace"
                                                                   FontSize="12"
                                                                   TextWrapping="NoWrap"
                                                                   Padding="4,1"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <!-- Action buttons for partial staging -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,6,0,0" Spacing="8">
                <TextBlock VerticalAlignment="Center" Foreground="#888888" FontSize="11"
                           Text="Select lines above, then:"/>
                <Button Content="Stage Selected Lines"
                        x:Name="StageSelectedBtn"
                        IsVisible="{Binding IsSelectedFileUnstaged}"
                        Padding="12,6"
                        FontSize="12"/>
                <Button Content="Unstage Selected Lines"
                        x:Name="UnstageSelectedBtn"
                        IsVisible="{Binding IsSelectedFileStaged}"
                        Padding="12,6"
                        FontSize="12"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>